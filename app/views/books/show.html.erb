<h2>User info</h2>
<%= render 'users/info',user: @user %>
<h2>New book</h2>
<%= render 'form', book: @books %>
<h2>Book detail</h2>
<% link_to user_patha(@book.user) do %>
<%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<%= @book.user.name %>
<% end %>
<%= link_to @book.title, book_path(@book) %>
<%= @book.body %>
<%= render "book_comments/book_comment",book: @book,book_comment: @book_comment %>
<% if current_user.id == @book.user_id %>
<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
<%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
<% end %>